                <p><img class="fileteado" src="/images/fileteadoBase.jpeg" alt="fileteado"></p>
            </div>

            <div class="squared-cards-container">
            
                <div class="sq-card-wrapper">
                    <article class="squared-card">
                        <div class="img-wrapper">
                            <img src="/images/billetera.jpg" alt="billetera">
                        </div>
                        <div class="title-n-price-container">
                            <h3 class="product-title  fc-darkgray">Billetera de cuero</h3>
                            <p class="price">$9.49</p>
                        </div>
                    </article>
                </div>
                
                <div class="sq-card-wrapper">
                    <article class="squared-card">
                        <div class="img-wrapper">
                            <img src="/images/facon.jpg" alt="facón gaucho">
                        </div>
                        <div class="title-n-price-container">
                            <h3  class="product-title  fc-darkgray">Facón Gaucho</h3>
                            <p class="price">$39.89</p>
                        </div>
                    </article>
                </div>
                
                <div class="sq-card-wrapper">
                    <article class="squared-card">
                        <div class="img-wrapper">
                            <img src="/images/boina.jpg" alt="boina">
                        </div>
                        <div class="title-n-price-container">
                            <h3  class="product-title  fc-darkgray">Boina gaucha</h3>
                            <p class="price">$6.99</p>
                        </div>
                    </article>
                </div>
                
                <div class="sq-card-wrapper">                
                    <article class="squared-card">
                        <div class="img-wrapper">
                            <img src="/images/bombacho.jpg" alt="pantalón bombacho">
                        </div>
                        <div class="title-n-price-container">
                            <h3  class="product-title  fc-darkgray">Pantalón bombacha</h3>
                            <p class="price">$25.00</p>
                        </div>
                    </article>
                </div>
            </div>
        </section>
