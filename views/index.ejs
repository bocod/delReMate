    <footer>
        <!-- Espacion para el upper footer SEO -->

        <section class="upper-footer padding-1rem">
            
            <article class="footer-card fc-white">
                <div>
                    <h3 class="footer-title">Alimentos</h3>
                    <a href=""><p>Fernet</p></a>
                    <a href="#"><p>Yerba</p></a>
                    <a href="#"><p>Dulce de leche</p></a>
                    <a href="#"><p>Vino</p></a>
                </div>
            </article>

            <article class="footer-card fc-white">
                <div>
                    <h3 class="footer-title">Ropa</h3>
