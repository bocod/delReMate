<body>
    <%- include('./partials/header') %> 

    <main>
        <section class="upper-main">
            <article class="category-card">
                <div class="img-wrapper">
                    <img src="/images/alfajor.png" alt="alfajor">
                </div>
                <h3 class="padding-1rem">Alimentos</h3>
            </article>
            <article class="category-card">
                <div class="img-wrapper">
                    <img src="/images/vinos.jpg" alt="bebidas">
                </div>
                <h3 class="padding-1rem">Bebidas</h3>
            </article>
            <article class="category-card">
                <div class="img-wrapper">
                    <img src="/images/mateIcon.jpeg" alt="alfajor">
                </div>
                <h3 class="padding-1rem">Regionales</h3>
            </article>
            <article class="category-card">
                <div class="img-wrapper">
                    <img src="/images/poncho.jpg" alt="poncho">
                </div>
