<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DelReMate - Carrito</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/header-n-footer.css">
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/buttons.css">
    <link rel="stylesheet" href="/css/medias.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Encode+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <script type="text/javascript" src="/script/register.js"></script>
</head>
<body>
    <%- include('./partials/header') %> 

    <main>
        <section class="container">
            
            <div class="form-errors">
                <% if (typeof errors != 'undefined') { %>
                    <p>Para continuar:</p>
                    <ul>
                        <% for (let i=0; i < errors.length; i++) { %>
                            <li>
                                <%= errors[i].msg %> 
                            </li> 
                        <% } %> 
                    </ul> 
                <% } %>
            </div>  

            <form class="registration-form" action="/users/register" method="POST" enctype="multipart/form-data">

                <div class="form-data-section">
                <label>Soy...</label> 
                    <div class="usertype">
                        <label class="cat-option"><input type="radio" value="human" name="usertype" id="human"> Humano</label>
                        <label class="cat-option"><input type="radio" value="business" name="usertype" id="business"> Empresa</label>
                    </div>
                </div>

                <div class="form-data-section">
                    <input type="text" name="name" id="name" class="input-field" placeholder="Nombre" value="<%= locals.oldData ? oldData.name : null %>" >
                </div>

                <div class="form-data-section">
                    <input type="text" name="surname" id="surname" class="input-field" placeholder="Apellido" value="<%= locals.oldData ? oldData.surname : null %>" >
                </div>

                <div class="form-data-section">
                    <input type="text" name="username" id="username" class="input-field" placeholder="Nombre de usuario" value="<%= locals.oldData ? oldData.username : null %>" >
                </div>

                <div class="form-data-section">
                    <label for="birthdate">Fecha de nacimiento</label> 
                    <input type="date" name="birthdate" id="birthdate" class="input-field" value="<%= locals.oldData ? oldData.birthdate : null %>" >
                </div>

                <div class="form-data-section">
                    <input type="text" name="email" id="address" class="input-field" placeholder="email" value="<%= locals.oldData ? oldData.email : null %>" >
                </div>
                
                <div class="form-data-section">
                    <label>País de residencia</label> 

                    <select class="country-selector" name="country" value="<%= locals.oldData ? oldData.country : null %>">

                        <% countries.forEach( country => { %> 

                            <option><%= country.name %> </option>

                        <% }) %> 

                    </select>
                </div>

                <div class="form-data-section">
                    <label for="pic">Foto de usuario</label> 
                    <input type="file" name="profilePic" accept="image/*">
                </div>

                <div class="form-data-section">
                    <input type="password" name="password" class="input-field" placeholder="Contraseña" >
                </div>

                <!-- <div class="form-data-section">
                    <input type="password" name="password_confirmation" class="input-field" placeholder="Repetir contraseña" >
                </div> -->
                
                <div class="tycPp">
                    <label>
                        <input type="checkbox" class="tyc"> Acepto los 
                        <a href="#" target="popup" onclick="window.open('/tyc','popup','width=600,height=600'); return false;">Terminos y Condiciones</a>
                         y las 
                        <a href="#" target="popup" onclick="window.open('/pp','popup','width=600,height=600'); return false;">Políticas de Privacidad</a>
                    </label>
                </div>

                <button type="submit" class="form-button blue-button emphasize-button">¡Registrarme!</button>
    
            </form>
        </section>
    </main>

    <%- include('./partials/footer') %> 
</body>
</html>