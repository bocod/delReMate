<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DelReMate - Carrito</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/header-n-footer.css">
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/buttons.css">
    <link rel="stylesheet" href="/css/image-section.css">
    <link rel="stylesheet" href="/css/medias.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Encode+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <script type="text/javascript" src="/script/register.js"></script>
</head>
<body>
    <%- include('./partials/header') %> 

    <main>
        <section class="container">

            <form class="registration-form" action="/users/userEdit/<%= userToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                <div class="form-data-section">
                <label>Mis datos</label> 
                </div>

                <div class="form-data-section">
                    <label>
                        Soy...
                    </label> 
                        <div class="usertype">
                            <label class="cat-option">
                                <input type="radio" value="human" name="usertype" id="human" disabled <%=(userToEdit.usertype=="human") ? "checked" : "" %>>
                                 Humano
                            </label>
                            <label class="cat-option">
                                <input type="radio" value="business" name="usertype" id="business" disabled <%=(userToEdit.usertype=="business") ? "checked" : "" %>>
                                 Empresa
                            </label>
                        </div>
                </div>

                <div class="form-data-section">
                    <input type="text" name="name" id="name" class="input-field" placeholder="Nombre"  value="<%= userToEdit.name %>">
                </div>

                <div class="form-data-section">
                    <input type="text" name="surname" id="surname" class="input-field" placeholder="Apellido"  value="<%= userToEdit.surname %>">
                </div>

                <div class="form-data-section">
                    <input type="text" name="username" id="username" class="input-field" placeholder="Nombre de usuario"  value="<%= userToEdit.username %>">
                </div>

                <div class="form-data-section">
                    <label for="birthdate">Fecha de nacimiento</label> 
                    <input type="date" name="birthdate" id="birthdate" class="input-field"  value="<%= userToEdit.birthdate %>">
                </div>

                <div class="form-data-section">
                    
                    <input type="text" name="email" id="address" class="input-field" placeholder="e-mail"  value="<%= userToEdit.email %>">
                </div>
                
                <div class="form-data-section">
                    <label>País de residencia</label> 
                    <select class="country-selector" name="country" value="<%= userToEdit.country %>">

                        <% countries.forEach( country => { %> 

                            <% if (userToEdit.country==country.name) { %> 
                                <option selected><%= country.name %></option>
                            <% } else { %> 
                                <option><%= country.name %></option>
                            <% } %> 
                        <% }) %> 

                    </select>
                </div>

                <div class="form-data-section">
                    <label for="pic">Foto de usuario</label> 
                    <div class="image-section">
                        <input type="file" name="profilePic" accept="image/*">
                        <img src="/img/usersImages/<%= userToEdit.profilePic %>" alt="Foto de perfil">
                    </div>
                </div>

                <!-- <div class="form-data-section">
                    <input type="password" name="newpassword" class="input-field" placeholder="Nueva contraseña" >
                </div> -->

                <div class="form-data-section">
                    <input type="password" name="password" class="input-field" placeholder="Contraseña" >
                </div>

                <button type="submit" class="form-button blue-button emphasize-button">Confirmar cambios</button>
            </form>
                
            <form class="registration-form" action="/users/delete/<%= userToEdit.id %>?_method=DELETE" method="POST">

                <button type="submit" class="form-button red-button emphasize-red-button">Darme de baja</button>
                
            </form>

        </section>
    </main>

    <%- include('./partials/footer') %> 
</body>
</html>